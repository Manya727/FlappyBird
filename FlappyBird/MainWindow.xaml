<Window x:Class="FlappyBird.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlappyBird"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">
    <Grid>
        <Canvas x:Name="GameCanvas" Background="SkyBlue">

            <Ellipse x:Name="Bird"
                     Width="30" Height="30"
                     Fill="Gold"
                     Canvas.Left="80" Canvas.Top="250"/>
            <Rectangle x:Name="Ground"
                       Height="50" Width="400"
                       Fill="SaddleBrown"
                       Canvas.Left="0" Canvas.Top="550"/>

            <TextBlock x:Name="ScoreText"
                       Canvas.Left="10" Canvas.Top="10"
                       FontSize="24" FontWeight="Bold"
                       Foreground="White"
                       Text="Score: 0"/>

            <TextBlock x:Name="CenterText"
                       Canvas.Left="55" Canvas.Top="220"
                       FontSize="20" FontWeight="Bold"
                       Foreground="White"
                       Text="Press SPACE to Start"/>

        </Canvas>

    </Grid>
</Window>
